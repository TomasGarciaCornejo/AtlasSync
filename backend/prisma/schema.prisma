generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // PK: String único generado automáticamente
  email     String   @unique // Columna única
  password  String // Guardaremos el hash de la contraseña
  name      String? // Puede ser nulo
  createdAt DateTime @default(now()) // Fecha de creación automática
  updatedAt DateTime @updatedAt // Se actualiza automáticamente en cada cambio
  role      String   @default("user") // Usaremos esto para permisos (admin, user, viewer)
}